rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Public read, admin write for all content collections
    match /prayers/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /newsletters/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /music/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /dailyInsights/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /books/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /lessons/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /news/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /contact/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /about/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /donations/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /courses/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /cards/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /recommendations/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /tzadikim/{document=**} {
      allow read: if true;
      allow create: if isAdmin();
      allow update: if true; // Allow anyone to update (e.g., viewCount)
      allow delete: if isAdmin();
    }
    
    match /dailyLearning/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
      allow update: if true; // Allow anyone to update soulElevations, playCount, viewCount
    }
    
    match /chidushim/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Rabbi students collection - public read, admin write
    match /rabbiStudents/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Pidyon Nefesh collection - public read, admin write
    match /pidyonNefesh/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
