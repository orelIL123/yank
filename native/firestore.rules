rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection - CRITICAL SECURITY
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;

      // ✅ SECURITY FIX: Users can update their own profile BUT NOT their role
      // This prevents privilege escalation attacks (user making themselves admin)
      allow update: if isAuthenticated() && request.auth.uid == userId &&
        // Check if 'role' field is being changed
        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));

      // ✅ Only admins can update any user (including role changes)
      allow update: if isAdmin();

      // ✅ Users can delete their own account (required by App Store)
      // Admins can also delete any user
      allow delete: if (isAuthenticated() && request.auth.uid == userId) || isAdmin();
    }
    
    // Public read, admin write for all content collections
    match /prayers/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Prayer commitments - authenticated users only
    match /prayerCommitments/{commitmentId} {
      allow read: if isAuthenticated();

      // ✅ User can only create commitments with their own userId
      allow create: if isAuthenticated() &&
        request.auth.uid == request.resource.data.userId;

      // ✅ Users can update their own commitments or commitments assigned to them
      // But they cannot change userId or assignedToUserId (prevents hijacking)
      allow update: if isAuthenticated() &&
        (request.auth.uid == resource.data.userId ||
         request.auth.uid == resource.data.assignedToUserId) &&
        // Prevent changing ownership fields
        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['userId', 'assignedToUserId']));

      // ✅ Admins can update/delete anything
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    match /newsletters/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /music/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /dailyInsights/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /books/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /lessons/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /news/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /contact/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Home Cards - public read, admin write
    match /homeCards/{cardId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /about/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /donations/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /courses/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /cards/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /recommendations/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /tzadikim/{document=**} {
      allow read: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    match /dailyLearning/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /chidushim/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /shortLessons/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /longLessons/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Notifications - authenticated users can read and mark as read, admin can write
    match /notifications/{notificationId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();

      // ✅ SECURITY: Users can only update the 'readBy' array to mark as read
      // This prevents users from modifying notification content
      allow update: if isAuthenticated() &&
        // Only 'readBy' field can be changed by regular users
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['readBy']) &&
        // User can only add their own UID to readBy array
        request.resource.data.readBy.hasAll(resource.data.get('readBy', [])) &&
        request.resource.data.readBy.hasAny([request.auth.uid]);

      // ✅ Admins can update anything
      allow update: if isAdmin();

      allow delete: if isAdmin();
    }
    
    // Daily Videos - authenticated users can read, admin can write
    match /dailyVideos/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Beit Midrash Videos - public read, admin write
    match /beitMidrashVideos/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Rabbi students collection - public read (shown on home screen), admin write
    match /rabbiStudents/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Pidyon Nefesh collection - public read, admin write
    match /pidyonNefesh/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ============================
    // ANALYTICS COLLECTIONS
    // ============================
    // Events: any authenticated user can write (app logs events), only admin can read
    match /analytics_events/{eventId} {
      allow create: if isAuthenticated();
      allow read: if isAdmin();
    }

    // Sessions: any authenticated user can write, only admin can read
    match /analytics_sessions/{sessionId} {
      allow create: if isAuthenticated();
      allow read: if isAdmin();
    }

    // Stats: any authenticated user can write (increment counters), only admin can read
    match /analytics_stats/{statId} {
      allow read: if isAdmin();
      allow write: if isAuthenticated();
    }

    // Screen stats: any authenticated user can write, only admin can read
    match /analytics_screen_stats/{screenId} {
      allow read: if isAdmin();
      allow write: if isAuthenticated();
    }

    // Content stats: any authenticated user can write, only admin can read
    match /analytics_content_stats/{contentId} {
      allow read: if isAdmin();
      allow write: if isAuthenticated();
    }
  }
}
